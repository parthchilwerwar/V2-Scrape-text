{
    "manifest_version": 3,
    "name": "V2 Scraper",
    "description": "A simple Chrome extension to scrape text content.",
    "version": "1.0.0",
    "permissions": ["activeTab", "scripting"],

    

    "action": {
        "default_popup": "popup.html",
        "default_icon": "V2.png" 
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"], 
            "js": ["content.js"]
        }
    ]
}
